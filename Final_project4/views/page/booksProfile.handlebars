<div>
     <header>Book_Information</header>
     <main>
          <dl>
               <dt id='id1'>ID:</dt>
               <dd id="bookId">{{_id}}</dd>
               <dt id='Title1'>Title:</dt>
               <dd id='Title2'>{{Title}}</dd>
               <dt id='First1'>Author Firstname:</dt>
               <dd id='First2'>{{Author_FirstName}}</dd>
               <dt id='Last1'>Author LastName:</dt>
               <dd id='Last2'>{{Author_LastName}}</dd>
               <dt id='Publisher1'>Publisher:</dt>
