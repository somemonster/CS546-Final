               <td>
                    <textarea id="Comments2" name="Comments" rows="10" cols="50">
                    </textarea>
                    <input id="submit" value='submit' type='submit' onclick="javascript:UpdateComments()"/>
                    <script type="text/javascript">
                         function UpdateComments()
                         {
                            
                              $.post('/Comments', {
                              "_id" : $('#bookId').html(),
                              "comments": $('#Comments').val()
                              }, function (data) { });
                              location.reload();
                         }
                    </script>
