<div>
     <form action="/signup" method="post" onsubmit="return validateForm()">
          <table border="26" align="center" width="50%">
               <caption>User signup</caption>
               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>username：
                    </td>
                    <td><input type="text" name="username" id="username" class="input_class" onblur="checkUsername(this)"
                         /><span id="username_span">username consisted of 6 to 15 characters</span></td>
               </tr>

               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>password：
                    </td>
                    <td><input type="password" name="password" id="password" class="input_class" onblur="checkPassword(this)"
                         /><span id="password_span">password consisted of 8 to 15 characters</span></td>
               </tr>
               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>ensure_password：
                    </td>
                    <td><input type="password" name="rePassword" id="rePassword" class="input_class" onblur="checkRePassword(this)"
                         /><span id="rePassword_span">password need be same with previous password</span></td>
               </tr>

               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>Email：
                    </td>
                    <td><input type="text" name="Email" id="Email" class="input_class" onblur="checkEmail(this)" /><span
                              id="Email_span">format：xxxxxxxx@163.com</span></td>
               </tr>

               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>firstname：
                    </td>
                    <td><input type="text" name="firstName" id="firstName" class="input_class" onblur="checkFirstName(this)" /><span
                              id="firstName_span">just characters</span></td>
               </tr>
               <tr>
                    <td align="right">
                         <sup><font color="red">*</font></sup>lastname：
                    </td>
                    <td><input type="text" name="lastName" id="lastName" class="input_class" onblur="checkLastName(this)" /><span
                              id="lastName_span">just characters</span></td>
               </tr>
               <tr>
                    <td align="center" colspan="2">
                         <input type="submit" class="aaa" value="register" />
                         <input type="reset" class="aaa" value="reset" />
                    </td>
               </tr>
          </table>
     </form>
     <a href="/"> back </a>
</div>